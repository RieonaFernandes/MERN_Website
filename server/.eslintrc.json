{
    "env": {
      "node": true,
      "commonjs": true,
      "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "indent": ["error", 2],
      "no-console": "warn",
      "semi": ["error", "always"],
      "quotes": ["error", "double", { "avoidEscape": true } ],
      "eqeqeq": ["error", "always"],
      "no-unused-vars": ["error", { "vars": "all", "args": "none" }]
    }
  }
  